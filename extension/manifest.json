{
  "name": "Download Blocker",
  "storage" : {
   "managed_schema" : "schema.json"  
  },
  "version": "0.1.7",
  "manifest_version": 2,
  "description": "This chrome extension was created to block HTML smuggling attacks. It can also block downloads of unwanted file types.",
  "homepage_url": "https://github.com/SecurityJosh/DownloadBlocker",
  "icons": {
    "16": "icons/icon16.png", 
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "192": "icons/icon192.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/utils.js",
      "src/configuration.js",
      "src/background.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": ["src/contentscript.js"],
      "run_at":"document_start"
    }
],

  "permissions": [
    "downloads",
    "notifications",
    "tabs",
    "storage",
    "file://*/*",
    "http://*/*",
    "https://*/*"
  ]
}